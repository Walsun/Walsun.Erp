FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY eShopOnAbp ./eShopOnAbp
WORKDIR /src/eShopOnAbp/gateways/web-public/src/Walsun.Erp.WebPublicGateway
RUN dotnet publish -c Release -o bin/Release/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0  AS final
WORKDIR /app
COPY --from=build /src/eShopOnAbp/gateways/web-public/src/Walsun.Erp.WebPublicGateway/bin/Release/publish/ .
ENTRYPOINT ["dotnet", "Walsun.Erp.WebPublicGateway.dll"]