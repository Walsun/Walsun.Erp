FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY Walsun.Erp ./Walsun.Erp
WORKDIR /src/Walsun.Erp/services/catalog/src/Walsun.Erp.CatalogService.HttpApi.Host
RUN dotnet publish -c Release -o bin/Release/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /src/Walsun.Erp/services/catalog/src/Walsun.Erp.CatalogService.HttpApi.Host/bin/Release/publish/ .
ENTRYPOINT ["dotnet", "Walsun.Erp.CatalogService.HttpApi.Host.dll"]